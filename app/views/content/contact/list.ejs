<div class="container">
    <h1>Business Contact Information</h1>
    <% if(displayName) { %>
    <a href="/contact-add" class="btn btn-primary" role="button">
        <i class="fas fa-plus-circle"></i> Add your info</a>
    <% } %>

    <div class="row">
        <div class="col">
    
            <table class="table table-striped table-bordered table-hover">
                <thead class="table-dark">
                    <tr>
                        <th scope="col" class="text-center">#</th>
                        <th scope="col">Name</th>
                        <th scope="col">Number</th>
                        <th scope="col">Email</th>
                        <% if(displayName) { %>
                        <th></th>
                        <th></th>
                        <% } %>
                    </tr>
                </thead>
                <tbody id="contactList">
                    <!-- Repeatable Rows -->
                    <% for(let count = 0; count < contact.length; count++) { %>
                        <tr>
                            <th scope="row" class="text-center"><%= count + 1 %></th>
                            <td><%= contact[count].name %></td>
                            <td><%= contact[count].number %></td>
                            <td><%= contact[count].email %></td>
                            <% if(displayName) { %>
                            
                            <td class="text-center col-1">
                                <a href="/contact-update/<%= contact[count]._id %>"
                                    class="btn btn-primary btn-sm">
                                    <i class="fas fa-pencil-alt"></i> Update</a>
                            </td>
                            
                            <td class="text-center col-1">
                                <a href="/contact-delete/<%= contact[count]._id %>"
                                    class="btn btn-danger btn-sm">
                                    <i class="fas fa-trash-alt"></i> Delete</a>
                            </td>

                            <% } %> 
                        </tr>
                    <% } %>
                </tbody>
            </table>
        </div>
    </div>
</div>

